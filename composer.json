{
  "name": "killakit/killakit-elementor",
  "description": "Sophisticated Elementor widgets that illuminate your designs",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Benito Anagua",
      "email": "benito.anagua@gmail.com",
      "homepage": "https://benitoanagua.me"
    }
  ],
  "require": {
    "php": ">=8.0"
  },
  "require-dev": {
    "arifpavel/elementor-stubs": "^3.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "php-stubs/wordpress-stubs": "^6.0",
    "phpstan/extension-installer": "^1.3",
    "phpstan/phpstan": "^1.10",
    "squizlabs/php_codesniffer": "^3.7",
    "szepeviktor/phpstan-wordpress": "^1.3",
    "wp-coding-standards/wpcs": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "KillaKit\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "KillaKit\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "phpstan": "phpstan analyse --memory-limit=1G",
    "phpcs": "phpcs --standard=WordPress --extensions=php src/ killakit.php",
    "phpcbf": "phpcbf --standard=WordPress --extensions=php src/ killakit.php",
    "test": [
      "@phpstan",
      "@phpcs"
    ],
    "analyse": "@phpstan",
    "lint": "@phpcs",
    "fix": "@phpcbf"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    },
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
